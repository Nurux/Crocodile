<%- include('partials/head') %>

<%- include('partials/navbar')%>
<body>
    <div class="pergunta_atual">
        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao %></p>
    </div>

    <div class="resp">
        <form method="POST" action="/resp">
                <h4>Responda:</h4>
                <input style="display: none" name="id" value="<%= pergunta.id %>"></input>
                <textarea id="desc" name="resp" placeholder="Deixe sua resposta aqui"></textarea>
                <button type="submit">Responder</button>
        </form>
    </div>

    <% if(cond) { %>
        <h3 id="intet">Respostas: </h3>
        <% respostas.forEach(resposta => { %>
            <div class="respp">
                <p><%= resposta.corpo%></p>
            </div>
        <% }) %>
    <% } else { %>
    <% } %>
</body>

